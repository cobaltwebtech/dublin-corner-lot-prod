---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://www.facebook.com/people/Dublin-Corner-Lot/61566389771766/?mibextid=LQQJ4d",
    description: "Facebook Page",
    icon: "mdi:facebook",
  },
  {
    url: "https://www.instagram.com/dublin_cornerlot/",
    description: "Instagram Profile",
    icon: "mdi:instagram",
  },
];
---

<footer class="py-16 px-4 border-t-2 border-default bg-offset">
  <div class="flex items-center justify-around w-full">
    <div class="text-sm">
      <p class="font-extrabold">
      Dublin Corner Lot, Inc.
      </p>
      <p class="font-light"> 
        501 (c)(3) Non-Profit Corporation
        <br> EIN: 75-2784640
      </p>
      </div>
    <ul class="grid grid-cols-2 gap-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex size-16 items-center justify-center border-2 border-current p-4"
              href={link.url}
              target="_blank"
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="size-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <p class="mt-8 text-sm text-center">
    Website built by <a href="https://www.cobaltweb.tech/?utm_source=dublin-corner-lot&utm_medium=web&utm_campaign=client-site-links" target="_blank" class="text-blue-600">Cobalt Web Technologies</a> in Austin, TX
  </p>
</footer>
