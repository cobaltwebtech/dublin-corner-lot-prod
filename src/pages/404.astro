---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HomeButton from "@/components/HomeButton.astro";
import { Icon } from "astro-icon/components";
import { SITE } from "@/data/siteConfig";

const pageTitle: string = `Page Not Found | ${SITE.title}`;
---

<BaseLayout title={pageTitle} noIndex={true}>
  <section class="space-y-8 text-center">
    <Icon name="close-octagon-outline" class="text-error mx-auto size-36" />
    <h1 class="text-5xl font-bold">Error 404 - Page Not Found</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    <HomeButton />
  </section>
</BaseLayout>
