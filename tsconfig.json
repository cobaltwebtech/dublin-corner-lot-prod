{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/layout/*": ["src/layouts/*"],
      "@/comp/*": ["src/components/*"],
      "@/img/*": ["src/assets/images/*"]
    },
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.astro"],
  "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
