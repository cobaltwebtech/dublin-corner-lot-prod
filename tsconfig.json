{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@layout/*": ["src/layouts/*.astro"],
      "@comp/*": ["src/components/*.astro"],
      "@img/*": ["src/assets/images/*"]
    },
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
